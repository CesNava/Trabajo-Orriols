tabla<-CrossTable(ess9es$asistencia_rel, ess9es$inmigracion_pobres, digits=1, prop.t=F, prop.r = F, expected=F, asresid=TRUE, prop.chisq=F, chisq=TRUE, format=c("SPSS"))
